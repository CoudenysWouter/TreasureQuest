<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.casper.firstapp.FinishWinActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="You loose.."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display3"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/dragon"
        android:src="@drawable/dragon"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Unfortunately, you were not able to defeat the dragon. Better luck next time!"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:gravity="center"
        />


</LinearLayout>

